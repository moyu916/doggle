$primary = #1baeae
$orange = #ff6b01
$bc = #f7f7f7
$fc = #fff

// 定位全屏
.allcover
    position absolute
    top 0
    bottom 0
    right 0
    left 0

// 定位上下左右居中
.center
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

//字体的大小颜色
sc($size, $color)
    font-size $size
    color $color

ellipsis()
    overflow hidden
    white-space: nowrap
    text-overflow: ellipsis
